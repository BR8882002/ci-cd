node {
   def commit_id
   stage('step a') {
     checkout scm
     sh "git rev-parse --short HEAD > .git/commit-id"                        
     commit_id = readFile('.git/commit-id').trim()
   }
   stage('DockerBuild') {
       dir("docker/day_2/12factor/multistage_build/"){
       sh "docker build --target builder -t michabi/jenkins_lab:multi_stage_builder -f Dockerfile-pipelines ."
       }
     }
   stage('Linting') {
       dir("docker/day_2/12factor/multistage_build/"){
       sh "docker build --target linting -t michabi/jenkins_lab:multi_stage_test -f Dockerfile-pipelines ."
       }
     }
   stage('Push to DockerHub') {
      sh "docker push michabi/jenkins_lab:multi_stage_builder"
      sh "docker push michabi/jenkins_lab:multi_stage_test"
   }   
}
   
   




